[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	br = branch
	brm = branch --merged
	c = commit
	ca = commit --amend
	co = checkout
	d = diff
	datetag = !git tag `date \"+%Y-%m-%d-%H-%M\"` && echo `date \"+%Y-%m-%d-%H-%M\"`
	dc = diff --cached
	fe = fetch
	ff = merge --ff-only
	pick = cherry-pick
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	rbs = rebase --skip
	rh = reset --hard
	rs = reset --soft
	st = status
	stage = add
	sub = submodule update --init
	unstage = reset HEAD
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = mvim -f
	autocrlf = input
[apply]
	whitespace = nowarn
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
